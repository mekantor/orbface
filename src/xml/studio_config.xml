<groupdef id="studio.configgroup.int" default_h="16">
	<layer x="0" y="0" w="-43" h="16" image="studio.config.textbg"
		id="cfg.bg"
		relatw="1"
	/>

	<text
		id="cfg.txt"
		x="0" y="0"
		w="120" h="16" 
		fontsize="14"
		color="255,255,255"
	/>

	<edit 
		id="cfg.edit"
		x="-45" y="0"
		w="45" h="16" 
		relatx="1"
	/>

	<script id="cfg.int" file="scripts/cfgint.maki"/>
</groupdef>

